@model AgentScrum.Web.Models.GoogleDriveCredentials

@{
    ViewData["Title"] = "Settings";
}

<div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6">
        <h2 class="text-lg leading-6 font-medium text-gray-900">Settings</h2>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">Manage your application settings</p>
    </div>
    
    <div class="border-t border-gray-200">
        <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg leading-6 font-medium text-gray-900">Google Drive Integration</h3>
            <div class="mt-2 max-w-xl text-sm text-gray-500">
                <p>Upload your Google Drive service account credentials to enable document creation.</p>
            </div>
            
            <div class="mt-5">
                @if (Model != null && Model.IsValid)
                {
                    <div class="flex items-center mb-4">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-green-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm font-medium text-gray-900">Valid credentials uploaded</p>
                            <p class="text-xs text-gray-500">Last updated: @Model.UploadedAt.ToString("g")</p>
                        </div>
                    </div>
                }
                
                <form asp-controller="Settings" asp-action="UploadGoogleCredentials" method="post" enctype="multipart/form-data">
                    <div class="flex items-center">
                        <div class="flex-1">
                            <label for="credentialsFile" class="block text-sm font-medium text-gray-700">
                                Credentials JSON File
                            </label>
                            <div class="mt-1 flex rounded-md shadow-sm">
                                <input type="file" name="credentialsFile" id="credentialsFile" 
                                       class="focus:ring-blue-500 focus:border-blue-500 flex-1 block w-full rounded-md sm:text-sm border-gray-300" 
                                       accept=".json">
                            </div>
                            <p class="mt-2 text-sm text-gray-500">
                                Upload a Google service account credentials JSON file.
                            </p>
                        </div>
                        <div class="ml-3">
                            <button type="submit" 
                                    class="inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                Upload
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 